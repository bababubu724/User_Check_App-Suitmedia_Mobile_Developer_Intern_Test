<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.usercheckapp">

    <!-- Izin untuk mengakses internet -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Izin untuk mengakses jaringan (Wi-Fi atau data seluler) -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_usercheck"
        android:label="@string/app_name"
        android:theme="@style/Theme.UserCheckApp">

        <!-- FirstScreen -->
        <activity android:name=".FirstScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- SecondScreen -->
        <activity android:name=".SecondScreen"
            android:exported="true"
        android:theme="@style/Theme.UserCheckApp"/>

        <!-- ThirdScreen -->
        <activity android:name=".ThirdScreen"
            android:exported="true"
        android:theme="@style/Theme.UserCheckApp"/>

    </application>
</manifest>
